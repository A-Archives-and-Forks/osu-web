{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "curly": [true, "ignore-same-line"],
    "eofline": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": false,
    "jsx-no-multiline-js": false,
    "quotemark": [true, "single"],
    "max-line-length": false,
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": "statics-first",
        "alphabetize": true
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": {
      "severity": "warning"
    },
    "triple-equals": [
      true,
      "allow-null-check"
    ]
  },
  "rulesDirectory": []
}
